<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - LesChairs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcChair.styles.css" asp-append-version="true" />
    <style>
        /* Modern font */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f8f9fa;
            color: #333;
        }

        /* Navbar with gradient background */
        nav.navbar {
            background: linear-gradient(90deg, #4b6cb7 0%, #182848 100%);
            box-shadow: 0 4px 8px rgba(24, 40, 72, 0.2);
            padding: 1rem 2rem;
        }

        /* Centered site name, bold and large */
        .navbar-center {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            font-weight: 900;
            font-size: 1.8rem;
            color: #fff;
            user-select: none;
            letter-spacing: 2px;
            text-shadow: 1px 1px 5px rgba(0,0,0,0.3);
        }

        /* Remove logo and adjust padding */
        .navbar-brand {
            display: none;
        }

        /* Navbar links styling */
        .navbar-nav .nav-link {
            color: #cbd5e0; /* light slate */
            font-weight: 600;
            transition: color 0.3s ease, transform 0.2s ease;
            padding: 0.5rem 1rem;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link:focus {
                color: #fff;
                transform: scale(1.05);
                text-shadow: 0 0 5px rgba(255,255,255,0.7);
            }

        /* Navbar-toggler icon color */
        .navbar-toggler {
            border-color: #cbd5e0;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='%23cbd5e0' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }

        /* Footer styling */
        footer.footer {
            background-color: #182848;
            color: #cbd5e0;
            padding: 1rem 0;
            text-align: center;
            font-size: 0.9rem;
            box-shadow: inset 0 1px 0 rgba(255,255,255,0.1);
        }

            footer.footer a {
                color: #88aaff;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                footer.footer a:hover {
                    color: #fff;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light position-relative">
            <div class="container-fluid">
                <!-- Centered company name -->
                <div class="navbar-center d-none d-sm-block">
                    LesChairs
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Chairs" asp-action="Index">Chairs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto">
        <div class="container">
            &copy; 2025 - LesChairs - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
